<%= erb :"common/header" %>


  <h1 class = "title"><%= @myTitle %></h1>


  <main>
    <section>
        <h2>Searches for <i>"<%= @query %>"</i></h2>
        <h3>Users:</h3>
        <% if @users_results && !@users_results.empty? %>
            <ul>
                <% @users_results.each do |user| %>
                <div>
                <section class="story">
                    <h2><a href="/user-stories/<%= user[:userid].to_i %>"><%= user[:username] %></a></h2>
        </section>
      </div>
    <% end %>
            </ul>
        <% else %>
            <p class="alert">No results found.</p>
        <% end %>
        
        <h3>Stories:</h3>
        <% if @stories_results && !@stories_results.empty? %>
            <ul>
                <% @stories_results.each do |story| %>
                <div>
                <section class="story">
                 <h2><a href="/story-page/<%= story[:storyid].to_i %>"><%= story[:title] %></a></h2>
                  <p><strong>Blurb:</strong> <%= story[:blurb] %></p>
                </section>
      </div>
    <% end %>
            </ul>
        <% else %>
            <p class="alert">No results found.</p>
        <% end %>
    </section>
  </main>
<%= erb :"common/footer" %>
