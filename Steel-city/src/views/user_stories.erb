<%= erb :"common/header" %>
<article>
    <h1>User Stories:</h1>
</article>
<main class="home">
  <% unless @error.nil? %>
    <p><strong class="error"><%= @error %></strong></p>
  <% end %>
  <% if @story_list.nil? || @story_list.empty? %>
    <p>User has no stories</p>
  <% else %>
    <% @story_list.each do |story| %>
       <div>
         <section class="story">
        <h2><a href="/story-page/<%= story[:storyid].to_i %>"><%= story[:title] %></a></h2>
            <p><strong>Blurb:</strong> <%= story[:blurb] %></p>
        </section>
      </div>
    </section>
      </div>
    <% end %>
    <br>
  <% end %>
</main>
<%= erb :"common/footer" %>