<%= erb :"common/header" %>

  <h1 class = "title"><%= @myTitle %></h1>

  <main class = Home>
    
    <section class="story">
      <% @stories.first(3).each do |story| %>
        <div class="container">
          <h2><a href="/story-page/<%= story[:storyid].to_i %>"><%= story[:title] %></a></h2>
          <p><%= story[:blurb] %></p>
        </div>
      <% end %>
    </section>

  </main>
<%= erb :"common/footer" %>
