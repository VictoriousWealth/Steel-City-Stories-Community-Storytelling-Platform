<% myTitle = "Write Story" %>
<%= erb :"common/header" %>
  <main>
    <section class="story-form">
      <h2>Write Your Story</h2>
      <form id="story-form" enctype="multipart/form-data">
        <label for="story-title">Title:</label>
        <input type="text" id="story-title" name="story-title" required><br><br>

        <label for="story-content">Story Content:</label><br>
        <textarea id="story-content" name="story-content" rows="10" cols="50" required></textarea><br><br>

        <label for="story-file">Upload Story File:</label>
        <input type="file" id="story-file" name="story-file" accept=".txt,.doc,.docx,.pdf" required><br><br>

        <input type="submit" value="Submit">
      </form>
    </section>

  </main>
<%= erb :"common/footer" %>
