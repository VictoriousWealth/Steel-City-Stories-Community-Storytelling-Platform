<%= erb :"common/header" %>

  <h1 class = "title"><%= @myTitle %></h1>

  <main>
    <section class="story-form">
      <h2>Write Your Story</h2>
      <% unless @error.nil? %>
        <p><strong class="error"><%= @error %></strong></p>
        <% end %>
      <form id="story-form" enctype="multipart/form-data" method="post" action="/submit-story">
        <label for="story-title">Title:</label>
        <input type="text" id="story-title" name="story-title" required><br><br>

        <label for="story-content">Story Content:</label><br>
        <textarea id="story-content" name="story-content" rows="10" cols="50" required></textarea><br><br>

        <label for="story-file">Upload Story File:</label>
        <input type="file" id="story-file" name="story-file" accept=".txt,.doc,.docx,.pdf" ><br><br>

       <label for="blurb-content">Blurb:</label><br>
        <textarea id="blurb-content" name="blurb-content" rows="5" cols="50" required></textarea><br><br>

        <label for="price">Price:</label>
        <input type="text" id="price" name="price" required><br><br>
        <label for="genre">Genre:</label>
        <select id="genre" name="genre" required>
          <option value="fiction">Fiction</option>
          <option value="crime-fiction">Crime Fiction</option>
          <option value="fantasy">Fantasy</option>
          <option value="science-fiction">Science Fiction</option>
          <option value="mystery">Mystery</option>
          <option value="thriller">Thriller</option>
          <option value="horror">Horror</option>
          <option value="romance">Romance</option>
          <option value="historical">Historical</option>
          <option value="adventure">Adventure</option>
          <option value="drama">Drama</option>
          <option value="autobiography">Autobiography</option>
          </select>
          <label for="language">Select Language:</label>
        <select id="language" name="language">
          <option value="en">English</option>
          <option value="zh">Chinese</option>
          <option value="ja">Japanese</option>
          <option value="ko">Korean</option>
        </select>
        <input type="submit" value="Submit">
      </form>
    </section>

  </main>
<%= erb :"common/footer" %>
