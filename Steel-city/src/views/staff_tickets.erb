<%= erb :"common/header" %>
<article>
    <h1>User Tickets:</h1>
</article>
<main class="home">
  <% unless @error.nil? %>
    <p><strong class="error"><%= @error %></strong></p>
  <% end %>
  <% get_tickets %>
  <% if @staff_contacts.nil? || @staff_contacts.empty? %>
    <p>No tickets found.</p>
  <% else %>
         <% @staff_contacts.each do |contact| %>
       <div>
         <section class="story">
            <p><strong>Request ID:</strong> <%= contact[:requestid] %></p>
            <p><strong>User ID:</strong> <%= contact[:userid] %></p>
            <p><strong>Email:</strong> <%= contact[:email] %></p>
            <p><strong>Title:</strong> <%= contact[:title] %></p>
            <p><strong>Feedback:</strong> <%= contact[:feedback] %></p>
        </section>
        <form id="complete-ticket-form" method="post" action="/complete-ticket/<%=contact[:requestid]%>">
            <button type="submit">Complete Ticket</button>
        </form>
      </div>
    <% end %>
    <% end %>
    <br>
</main>
<%= erb :"common/footer" %>