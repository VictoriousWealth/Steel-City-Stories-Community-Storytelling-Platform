<%= erb :"common/header" %>

<h1 class = "title"><%= @myTitle %></h1>

<main>
  <section class="cart">
    <h2>Cart</h2>
    <% if @cart.empty? %>
      <p>Your cart is empty.</p>
    <% else %>
      <ul>
        <% @cart.each do |item, quantity| %>
          <li><%= "#{item} x #{quantity}" %></li>
        <% end %>
      </ul>
      <h2>Total: <%= @total %> COM_pounds</h2>
    <% end %>
  </section>

  <section class="flexcolumn">
    <label for="address1">Address:</label>
    <input type="text" name="address1" id="address1" placeholder="1234 Main St">

    <label for="address2">Address 2 (Optional):</label>
    <input type="text" name="address2" id="address2" placeholder="Apartment or suite">

    <label for="city">City:</label>
    <input type="text" name="city" id="city" placeholder="London">

    <label for="country">Country:</label>
    <input type="text" name="country" id="country" placeholder="United Kingdom">

    <label for="postcode">Postcode:</label>
    <input type="text" name="postcode" id="postcode" placeholder="SW1A 0AA">
  </section>

  <section class="flexcolumn">
    <label for="sortcode">Sort Code:</label>
    <input type="text" name="sortcode" id="sortcode" placeholder="01-23-45">

    <label for="accountnumber">Account Number:</label>
    <input type="text" name="accountnumber" id="accountnumber" placeholder="01234567">

    <label for="accountname">Account Name:</label>
    <input type="text" name="accountname" id="accountname" placeholder="John Doe">
  </section>

  <section class="flexrow">
    <input type="reset" value="Reset">
    <input type="submit" value="Pay">
  </section>
</main>
<%= erb :"common/footer" %>