<%= erb :"common/header" %>

  <main>
    <section class="story">
      <h1 class = "title"><%= @title %></h1>
      <% if not session["logged_in"] %>
        <p>Blurb: <%= @blurb %><p>
      <% elsif session["logged_in"] %>
      <p>StoryID: <%= @storyID %></p>
      <p>Author: <a href="/user-stories/<%= @writerID %>"><%= @author %></a></p>
      <p><%= @body %></p>
      <% end %>
    </section>

  </main>
<%= erb :"common/footer" %>
